        goto boucle1_13
        DECFSZ _cmpt2,f
        goto boucle2_13
        end asm
      case ENCODEUR_OFF
         ' Etant dans une zone morte, on ne genere aucun pulse
         ' on attend juste qq cycle avant de recommencer la boucle
         Delay_Cyc(0x10)
    end select
   wend
end.